<div class="row">
  <% plans.each do |plan| %>
    <div class="col-md-3 mb-5 ">
      <div class="card" style="max-width: 18rem;">
        <div class="card_body text-center">
          <%= link_to plan, class: "text-dark" do %>
          <ul class="list-group list-group-flush">
            <li class="list-group-item bg-light"><h4><%= plan.destination %></h4></li>
            <li class="list-group-item "><%= plan.departure_date%> ~ <%= plan.return_date%></li>
          </ul>
          <% end %>
        </div>
      </diV>
    </div>
  <% end %>
  <%= paginate plans %>
</div>